@model ErrorViewModel
@{
    ViewData["Title"] = "Eroare";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="text-danger mb-4">Oops! A apărut o eroare.</h1>
                    <h2 class="text-danger mb-4">Ne cerem scuze pentru inconveniență.</h2>

                    @if (Model.ShowRequestId)
                    {
                        <p class="mb-3">
                            <strong>ID Cerere:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
                    {
                        <div class="alert alert-info">
                            <h3>Mod Dezvoltare</h3>
                            <p>
                                Schimbarea la mediul de <strong>Dezvoltare</strong> va afișa informații mai detaliate despre eroarea apărută.
                            </p>
                            <p>
                                <strong>Mediul de dezvoltare nu ar trebui activat pentru aplicațiile publicate!</strong>
                                Poate duce la afișarea informațiilor sensibile către utilizatorii finali.
                                Pentru depanare locală, activați mediul de <strong>Dezvoltare</strong> setând variabila de mediu <strong>ASPNETCORE_ENVIRONMENT</strong> la <strong>Development</strong>
                                și repornind aplicația.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
