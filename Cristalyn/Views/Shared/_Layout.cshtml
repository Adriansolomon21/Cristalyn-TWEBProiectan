<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cristalyn</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cristalyn.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .card-img-top {
            width: 100%;
            height: 230px;
            object-fit: contain;
        }

        .container {
            max-width: 1320px;
            margin: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cristalyn</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="bijuteriiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Talismane & Brățări
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="bijuteriiDropdown">
                                <li><a class="dropdown-item" href="#">Pandora Moments</a></li>
                                <li><a class="dropdown-item" href="#">Pandora ME</a></li>
                                <li><a class="dropdown-item" href="#">Disney x Pandora</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Magazin" asp-action="Lista">Toate Produsele</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cos" asp-action="Index">Coșul meu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cos" asp-action="ComenzileMele">Comenzile Mele</a>
                        </li>
                        @if (Context.Session.GetString("UserRol") == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Comenzi">Panou Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cupoane" asp-action="Index">Cupoane</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Reduceri" asp-action="Index">Reduceri Categorii</a>
                            </li>
                        }

                        @if (Context.Session.GetString("UserEmail") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="PuncteFidelitate" asp-action="Index">
                                    <i class="bi bi-star"></i> Puncte Fidelitate
                                </a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">Salut, @Context.Session.GetString("UserEmail")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cont" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cont" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cont" asp-action="Register">Înregistrare</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-muted py-3">
        <div class="container text-center">
            &copy; 2025 - Cristalyn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
