<a href="@Url.Action("Populare", "Magazin")" class="btn btn-danger mt-4">Vezi toate bijuteriile populare</a>
@model List<Cristalyn.Models.Produs>
@{
    ViewData["Title"] = "Bijuterii Populare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #fdf6ee;
    }

    .card {
        background-color: #fff8f0;
        border: 1px solid #e7dccc;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        color: #8a5d3b;
        font-weight: 600;
    }

    .text-muted {
        color: #7c6f64 !important;
    }

    .btn-outline-primary {
        border-color: #c0a98e;
        color: #8a5d3b;
    }

        .btn-outline-primary:hover {
            background-color: #c0a98e;
            color: white;
        }
</style>

<section class="container py-5">
    <h2 class="mb-4 fw-bold text-center" style="color: #8a5d3b">🔝 Bijuterii Populare</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var produs in Model)
        {
            <div class="col">
                <div class="card border-0 h-100">
                    <img src="@produs.ImagineUrl" class="card-img-top p-3" alt="@produs.Nume">
                    <div class="card-body text-center">
                        <h5 class="card-title">@produs.Nume</h5>
                        <p class="text-muted">@string.Format("{0:N0} LEI", produs.Pret)</p>
                        <a asp-controller="Magazin" asp-action="Detalii" asp-route-id="@produs.Id" class="btn btn-sm btn-outline-primary">Detalii</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
