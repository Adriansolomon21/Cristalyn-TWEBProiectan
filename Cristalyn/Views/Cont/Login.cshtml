<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px;">
        <div class="card-body">
            <h2 class="text-center mb-4"><i class="bi bi-person-circle"></i> Autentificare</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input name="email" class="form-control" placeholder="Introduceți email-ul" />
                    </div>
                </div>
                <div class="mb-3">
                    <label for="parola" class="form-label">Parolă</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input name="parola" type="password" class="form-control" placeholder="Introduceți parola" />
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-box-arrow-in-right"></i> Conectare</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <span>Nu aveți cont?</span> <a asp-action="Register" class="link-primary">Înregistrați-vă</a>
            </div>
        </div>
    </div>
</div>
