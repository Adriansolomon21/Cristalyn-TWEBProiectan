@model Cristalyn.Models.ReducereCategorie
@{
    ViewData["Title"] = "Editare Reducere";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-pencil"></i> Editare Reducere
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Categorie" class="control-label"></label>
                                    <select asp-for="Categorie" class="form-select"
                                            asp-items="@(new SelectList(ViewBag.Categorii))">
                                        <option value="">-- Selectați categoria --</option>
                                    </select>
                                    <span asp-validation-for="Categorie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProcentReducere" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="ProcentReducere" class="form-control" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="ProcentReducere" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ValidDeLa" class="control-label"></label>
                                    <input asp-for="ValidDeLa" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidDeLa" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ValidPanaLa" class="control-label"></label>
                                    <input asp-for="ValidPanaLa" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidPanaLa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descriere" class="control-label"></label>
                            <textarea asp-for="Descriere" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descriere" class="text-danger"></span>
                            <small class="form-text text-muted">Opțional: Adăugați o descriere pentru această reducere</small>
                        </div>

                        <div class="form-group text-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Salvează Modificările
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 