@model Cristalyn.Models.Cupon
@{
    ViewData["Title"] = "Adaugă Cupon Nou";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-ticket-perforated"></i> Adaugă Cupon Nou
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Cod" class="control-label"></label>
                                    <input asp-for="Cod" class="form-control" />
                                    <span asp-validation-for="Cod" class="text-danger"></span>
                                    <small class="form-text text-muted">Doar litere mari, cifre și cratimă</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Valoare" class="control-label"></label>
                                    <input asp-for="Valoare" class="form-control" />
                                    <span asp-validation-for="Valoare" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ValidDeLa" class="control-label"></label>
                                    <input asp-for="ValidDeLa" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidDeLa" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ValidPanaLa" class="control-label"></label>
                                    <input asp-for="ValidPanaLa" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ValidPanaLa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EsteProcentual" class="form-check-input" />
                                        <label asp-for="EsteProcentual" class="form-check-label"></label>
                                    </div>
                                    <span asp-validation-for="EsteProcentual" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NumarMaximUtilizari" class="control-label"></label>
                                    <input asp-for="NumarMaximUtilizari" class="form-control" />
                                    <span asp-validation-for="NumarMaximUtilizari" class="text-danger"></span>
                                    <small class="form-text text-muted">Lăsați gol pentru utilizări nelimitate</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ValoareMinimaComanda" class="control-label"></label>
                            <input asp-for="ValoareMinimaComanda" class="form-control" />
                            <span asp-validation-for="ValoareMinimaComanda" class="text-danger"></span>
                            <small class="form-text text-muted">Lăsați gol dacă nu există valoare minimă</small>
                        </div>

                        <div class="form-group text-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Salvează Cupon
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 